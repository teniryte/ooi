@import './variables.styl';

body
	display: block !important;
	margin: 0 !important;
	padding: 0 !important;
	font-family: $font-family;
	// background-image: url('https://cdn.sencort.com/ooi/images/bg/city-buildings-up-lens.jpg') !important;
	background-color: #fff;
	background-attachment: fixed;

.markdown-body img
	max-width: none !important;

a.large-button
	padding: 15px 20px !important;
	background-color: #009e54 !important;
	color: #fff !important;
	font-size: 1.2em !important;
	font-weight: 500 !important;
	display: inline-block !important;
	border-radius: 5px !important;
	transition: 0.3s background-color !important;

	&:hover
		background-color: #ff8929 !important;
	
	&--secondary
		background-color: lighten(#B0BEC5, 80%) !important;
		color: #263238 !important;
		font-size: 1.1em !important;
		padding: 10px 15px 15px 15px !important;
		border-left: 3px solid #ff8929 !important;

.markdown-body
	padding-top: $header-margin !important;

.forum-teniryte
	font-family: $font-family !important;
	font-weight: $font-weight !important;
	font-size: $font-size !important;
	padding: $header-margin !important;
	margin: $header-margin !important;
	background-color: transparentify(#fff, 85%) !important;
	border-radius: 5px !important;
	background-image: linear-gradient(#ECEFF1, #CFD8DC) !important;
	width: 1300px !important;
	margin-left: auto !important;
	margin-right: auto !important;

	.marker
		font-size: 0.8em !important;
		position: relative !important;
		bottom: 1px !important;
		color: #607D8B !important;

	p:first-of-type, p:nth-of-type(2)
		display: flex !important;
		justify-content: space-between !important;
		margin: auto !important;
		
		a
			margin: 10px !important;
			// transform: scale(1.3, 1.3);
	
	.section--header__slogan
		width: auto !important;
	
	p:first-of-type

		a

			img
				// width: 106px !important;
				// height: 20px !important;

	p:nth-of-type(2)
		justify-content: center !important;

	.contents

		a

			em
					display: inline-block !important;
					margin-right: 3px !important;
					font-style: normal !important;

	a
		color: #0087e0;
		font-weight: 500 !important;

		&:hover
			text-decoration: none !important;
			color: #ff8929;

	.section--header

		img
			border-radius: 10px;
		
		h3
			font-size: 3em;
	
	.section--miniheader

		img
			border-radius: 10px;
		
		h3
			font-size: 2em;
	
	.section
		font-family: $font-family !important;
		font-weight: $font-weight !important;
		font-size: $font-size !important;
		padding: 30px !important;
		margin: $header-margin !important;
		background-color: lighten(#eee, 60%) !important;
		border: 1px solid lighten(#eee, 20%) !important;
		border-radius: 5px !important;
		// background-image: linear-gradient(#ECEFF1, #CFD8DC) !important;
		background-image: url('https://cdn.sencort.com/ooi/images/bg/sports.png') !important;

		&--header
			text-align: center !important;

			strong
				font-size: 1.1em !important;
			
			&__slogan
				font-size: 1.4em !important;
	
	ul
		margin-left: 30px !important;

  // Top Line ==================================================================

	h2
		color: #263238 !important;
		font-weight: 500 !important;
		margin-bottom: 20px !important;
		margin-top: 0 !important;
		padding: 1em 1.1em 0.85em 1.1em !important;
		border-radius: 5px !important;
		background-color: lighten(#eee, 20%) !important;
		border: 1px solid lighten(#ccc, 60%) !important;
		font-size: 1.2em !important;

		em
			display: inline-block !important;
			margin-right: 20px !important;
			font-style: normal !important;
		
		a
			opacity: 0.2 !important;
			color: #78909C !important;
			position: relative !important;
			bottom: 1px !important;

			&:hover
				opacity: 0.5 !important;
				color: #78909C !important;

	h1
		font-family: $font-family !important;
		color: $text-color !important;
		font-weight: $font-weight !important;
		font-size: $header-font-size !important;
		padding-bottom: $header-margin !important;
		margin-bottom: $header-margin !important;

		em
			color: #546e7a !important;
			font-weight: 500 !important;
			font-style: normal !important;
			background-color: #eceff1 !important;
			border-radius: 5px !important;

	blockquote
		text-decoration: none !important;
		border: none !important;
		font-style: normal !important;
		font-size: 0.8em !important;
		font-weight: 400 !important;
		margin-bottom: 10px !important;
		background-color: $light-bg !important;
		border-radius: $border-radius !important;
		padding: $badge-padding !important;
		padding-left: 20px !important;
		border-left: 3px solid #B0BEC5 !important;
		transition: 0.3s margin-left, 0.3s padding-left !important;

		&:hover
			margin-left: 30px !important;
			padding-left: 30px !important;

		a
			text-decoration: none !important;
			color: #78909c !important;
			display: flex !important;
